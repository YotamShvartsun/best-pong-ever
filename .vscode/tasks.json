{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "deploy",
            "type": "shell",
            "command": "cp",
            "args": [
                "-Force",
                "${relativeFile}",
                "../../${relativeFile}"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "run",
            "type": "shell",
            "command": "dosbox",
            "args": [
                "-c",
                "\"run",
                "${fileBasenameNoExtension}\""
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "test",
            "dependsOn": [
                "deploy",
                "run"
            ],
            "command": "echo running!"
        }
    ]
}